{% extends "NRTestPetClinicBundle::layout.html.twig" %}

{% block title "All Vets" %}

{% block content %}

<h1>Vet list</h1>

<table>
    <thead>
        <tr>
            <th>Vet Name</th>
            <th>Specialties</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('vet_show', { 'id': entity.id }) }}">{{ entity.firstName }} {{ entity.lastName }}</a></td>
			<td>
				{% for specialty in entity.specialties %}
					{{ specialty.name }}
				{% endfor %}
			</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('vet_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}